<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    >

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="none"
        motion:duration="500"
        motion:motionInterpolator="linear">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/btn_social_login_toggle" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/included_social_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/btn_social_login_toggle"
            android:alpha="0" />
        <Constraint
            android:id="@+id/tv_social_login"
            motion:layout_constraintEnd_toStartOf="@id/btn_social_login_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/btn_social_login_toggle"
            android:layout_marginEnd="10dp"
            motion:layout_constraintTop_toTopOf="@id/btn_social_login_toggle" >
            <CustomAttribute
                motion:customColorValue="@color/middle_grey"
                motion:attributeName="textColor" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/iv_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" />
        <Constraint
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            motion:layout_constraintTop_toBottomOf="@id/iv_logo"
            motion:layout_constraintBottom_toTopOf="@id/til_email"
            android:alpha="0" />
        <Constraint
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="30dp"
            motion:layout_constraintTop_toBottomOf="@id/til_email"
            motion:layout_constraintBottom_toTopOf="@id/btn_login"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            motion:layout_constraintTop_toBottomOf="@id/til_password"
            motion:layout_constraintBottom_toTopOf="@id/tv_register_comment"
            android:alpha="0" />
        <Constraint
            android:id="@+id/tv_login_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="30dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/cb_login_state"
            motion:layout_constraintBottom_toBottomOf="@id/cb_login_state"

            />
        <Constraint
            android:id="@+id/cb_login_state"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintStart_toEndOf="@id/tv_login_state"
            motion:layout_constraintTop_toTopOf="@id/btn_social_login_toggle"
            motion:layout_constraintBottom_toBottomOf="@id/btn_social_login_toggle"/>
        <Constraint
            android:id="@+id/tv_register_comment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@id/btn_login"
            motion:layout_constraintStart_toStartOf="@id/btn_login"
            android:layout_marginTop="15dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/tv_register"
            motion:layout_constraintStart_toEndOf="@id/tv_register_comment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/tv_register_comment"
            android:layout_marginStart="10dp"
            motion:layout_constraintTop_toTopOf="@id/tv_register_comment"
            android:alpha="0" />
        <Constraint
            android:id="@+id/tv_social_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toBottomOf="@id/btn_social_login_toggle"
            motion:layout_constraintEnd_toStartOf="@id/btn_social_login_toggle"
            motion:layout_constraintTop_toTopOf="@id/btn_social_login_toggle" >
            <CustomAttribute
                motion:customColorValue="@color/main_color_2"
                motion:attributeName="textColor" />
        </Constraint>
        <Constraint
            android:id="@+id/btn_social_login_toggle"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_up_arrow"
            motion:layout_constraintTop_toBottomOf="@id/iv_logo"
            android:rotation="-180" />
        <Constraint
            android:id="@+id/included_social_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            motion:layout_constraintTop_toBottomOf="@id/btn_social_login_toggle" />
    </ConstraintSet>
</MotionScene>