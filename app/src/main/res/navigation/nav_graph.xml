<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/fragment_dash_board"
        android:name="com.capstone.foodtesting.ui.dashboard.DashBoardFragment"
        android:label="fragment_dash_board"
        tools:layout="@layout/fragment_dash_board" />
    <fragment
        android:id="@+id/fragment_home"
        android:name="com.capstone.foodtesting.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/fragment_info"
        android:name="com.capstone.foodtesting.ui.info.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/fragment_login"
        android:name="com.capstone.foodtesting.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_fragment_login_to_fragment_home"
            app:destination="@id/fragment_home" />
        <action
            android:id="@+id/action_fragment_login_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.capstone.foodtesting.ui.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_fragment_login"
            app:destination="@id/fragment_login" />
        <action
            android:id="@+id/action_registerFragment_to_registerFinishedFragment"
            app:destination="@id/registerFinishedFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFinishedFragment"
        android:name="com.capstone.foodtesting.ui.register.RegisterFinishedFragment"
        android:label="fragment_register_finished"
        tools:layout="@layout/fragment_register_finished" >
        <action
            android:id="@+id/action_registerFinishedFragment_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>
</navigation>