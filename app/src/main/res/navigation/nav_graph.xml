<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/fragment_dash_board"
        android:name="com.capstone.foodtesting.ui.dashboard.DashBoardFragment"
        android:label="fragment_dash_board"
        tools:layout="@layout/fragment_dash_board" >
        <argument
            android:name="category"
            android:defaultValue="전체"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment_home"
        android:name="com.capstone.foodtesting.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragment_home_to_fragment_dash_board"
            app:destination="@id/fragment_dash_board"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_fragment_home_to_codeScanFragment"
            app:destination="@id/fragment_code_scan" />
        <action
            android:id="@+id/action_fragment_home_to_fragment_info"
            app:destination="@id/fragment_info" />
    </fragment>
    <fragment
        android:id="@+id/fragment_info"
        android:name="com.capstone.foodtesting.ui.info.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_fragment_info_to_codeGenerateFragment"
            app:destination="@id/codeGenerateFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_login"
        android:name="com.capstone.foodtesting.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_fragment_login_to_fragment_home"
            app:destination="@id/fragment_home" />
        <action
            android:id="@+id/action_fragment_login_to_registerFragment"
            app:destination="@id/fragment_register" />
    </fragment>
    <fragment
        android:id="@+id/fragment_register"
        android:name="com.capstone.foodtesting.ui.register.RegisterFragment"
        android:label="fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_fragment_login"
            app:destination="@id/fragment_login" />
        <action
            android:id="@+id/action_registerFragment_to_registerFinishedFragment"
            app:destination="@id/fragment_register_finished" />
    </fragment>
    <fragment
        android:id="@+id/fragment_register_finished"
        android:name="com.capstone.foodtesting.ui.register.RegisterFinishedFragment"
        android:label="fragment_register_finished"
        tools:layout="@layout/fragment_register_finished" >
        <action
            android:id="@+id/action_registerFinishedFragment_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>
    <fragment
        android:id="@+id/fragment_code_scan"
        android:name="com.capstone.foodtesting.ui.qr.CodeScanFragment"
        android:label="fragment_code_scan"
        tools:layout="@layout/fragment_code_scan" />
    <fragment
        android:id="@+id/fragment_write"
        android:name="com.capstone.foodtesting.ui.write.WriteFragment"
        android:label="fragment_write"
        tools:layout="@layout/fragment_write" />
    <fragment
        android:id="@+id/codeGenerateFragment"
        android:name="com.capstone.foodtesting.ui.qr.CodeGenerateFragment"
        android:label="fragment_code_generate"
        tools:layout="@layout/fragment_code_generate" >
        <argument
            android:name="uuid"
            app:argType="java.util.UUID" />
    </fragment>
</navigation>