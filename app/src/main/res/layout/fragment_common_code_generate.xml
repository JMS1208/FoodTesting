<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.common.qr.CommonCodeGenerateFragment">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="닫기"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_background"
        app:tint="@color/grey"
        app:srcCompat="@drawable/ic_close_"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/tv_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text ="매장명 나중에 추가"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_logo"
            android:scaleType="fitCenter"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/tv_comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:text="리뷰 작성을 위해 QR 코드를 스캔해주세요"
            />
        <TextView
            android:id="@+id/tv_comment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="화면을 캡쳐한 후 프린트하여 \n매장에 비치해주세요"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>