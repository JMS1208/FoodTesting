<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.restaurant.register.CorporateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_contents"
        android:gravity="center"
        android:padding="30dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_logo"
            android:adjustViewBounds="true"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="매장을 등록하고\n개발 메뉴를 소개해보세요!"
            android:fontFamily="@font/noto_sans_kr_medium_font_family"
            android:includeFontPadding="false"
            android:gravity="start"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매장 운영시간 &amp; 휴무일"
            android:fontFamily="@font/noto_sans_kr_medium_font_family"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="start"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="우리 매장의 운영시간 및 휴무일을 알려주세요"
            android:fontFamily="@font/noto_sans_kr_regular_font_family"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:gravity="start"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="운영시간"
            android:fontFamily="@font/noto_sans_kr_medium_font_family"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tv_operating_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_stroke_black_5"
            android:fontFamily="@font/noto_sans_kr_regular_font_family"
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/blue"
            android:text="클릭하여 설정해주세요"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴무일"
                android:fontFamily="@font/noto_sans_kr_medium_font_family"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="start"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ex) 매주 월요일, 연중무휴, 매월 첫째주 월요일"
                android:fontFamily="@font/noto_sans_kr_regular_font_family"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/et_day_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_stroke_black_5"
            android:fontFamily="@font/noto_sans_kr_regular_font_family"
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:hint="연중무휴"
            />
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="운영시간을 입력해주세요"
            android:fontFamily="@font/noto_sans_kr_regular_font_family"
            android:includeFontPadding="false"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginTop="5dp"
            android:visibility="invisible"

            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>