<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.write.WriteFragment">

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="닫기"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="신메뉴 등록하기"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="등록"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_arrow_down_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"/>


    <ImageView
        android:id="@+id/iv_menu_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        app:srcCompat="@drawable/ic_add_image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/tv_menu_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신메뉴 이름"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_menu_image"
        app:layout_constraintTop_toTopOf="@id/iv_menu_image"
        app:layout_constraintBottom_toTopOf="@id/et_new_menu_name"
        android:layout_marginStart="25dp"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_new_menu_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="메뉴 이름을 입력하세요"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_menu_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_name_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_menu_image"
        />

    <TextView
        android:id="@+id/tv_hope_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="희망 출시 가격"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cv_start_date"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/et_hope_price"
        app:layout_constraintTop_toTopOf="@id/et_hope_price"
        app:layout_constraintBottom_toBottomOf="@id/et_hope_price"
        android:layout_marginEnd="10dp"
        android:text="₩"
        android:textSize="20sp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_hope_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="15,000"
        android:textSize="18sp"
        android:gravity="end"
        android:inputType="numberDecimal"

        app:layout_constraintTop_toTopOf="@id/tv_hope_price_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_hope_price_title"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_sale_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테스트 할인 가격"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hope_price_title"
        app:layout_constraintStart_toStartOf="@id/tv_hope_price_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/et_sale_price"
        app:layout_constraintTop_toTopOf="@id/et_sale_price"
        app:layout_constraintBottom_toBottomOf="@id/et_sale_price"
        android:layout_marginEnd="10dp"
        android:text="₩"
        android:textSize="20sp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="15,000"
        android:textSize="18sp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@id/tv_sale_price_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="@id/tv_sale_price_title"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toStartOf="@id/cv_end_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_menu_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_calendar_18"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:text="판매 시작 날짜"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="날짜를 지정해주세요"
                android:layout_marginBottom="5dp"
                android:textSize="16sp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_start_date"
        app:layout_constraintTop_toTopOf="@id/cv_start_date">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_calendar_18"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:text="판매 종료 날짜"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="날짜를 지정해주세요"
                android:textSize="16sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tv_menu_explain_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴 간단 설명"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_price_title"
        app:layout_constraintStart_toStartOf="@id/tv_hope_price_title"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_menu_explain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:hint="신메뉴에 대해서 간단하게 소개해주세요!"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_explain_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tv_ingredient_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="원산지 표기"
        app:layout_constraintTop_toBottomOf="@id/et_menu_explain"
        app:layout_constraintStart_toStartOf="@id/tv_menu_explain_title"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:autoSizeTextType="uniform"
        android:hint="예시) 쌀(국내산), 대패삼겹살(돼지고기: 네덜란드산),
비엔나소시지(돈육,계육: 국내산), 고추튀김(돼지고기:
국내산), 새우(베트남산)"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ingredient_title"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>