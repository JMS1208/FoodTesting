<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_medium_font_family"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="안내"
            android:textColor="@color/grey"
            android:textSize="18sp" />



    </LinearLayout>


    <TextView
        android:id="@+id/tv_explains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_sans_kr_regular_font_family"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="입력하신 키워드가 추가되지 않았습니다.\n키워드를 추가한 후 질문을 등록하시겠습니까 ?"
        android:textColor="@color/grey"
        android:textSize="15sp"
        />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerThickness="1dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_medium_font_family"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="예"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:focusable="true"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tv_nope"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_medium_font_family"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="아니요"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>



</LinearLayout>