<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/balloon_blue"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_medium_font_family"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="안내"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_explains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_regular_font_family"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_margin="5dp"
        android:text="입력하신 키워드가 추가되지 않았습니다.\n키워드를 추가한 후 질문을 등록하시겠습니까 ?"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_margin="5dp"
        app:dividerThickness="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/noto_sans_kr_medium_font_family"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="예"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_nope"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/noto_sans_kr_medium_font_family"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="아니요"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>