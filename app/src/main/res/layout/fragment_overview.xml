<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/ll_container"
    tools:context=".ui.survey.overview.OverviewFragment">



    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_logo"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매장의 질문지는 이렇게 만들어요!"
        android:fontFamily="@font/noto_sans_kr_bold_font_family"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        />
    <TextView
        android:id="@+id/tv_explains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화면을 터치해보세요"
        android:fontFamily="@font/noto_sans_kr_medium_font_family"
        android:includeFontPadding="false"
        android:textColor="@color/blue"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        />
    <TextView
        android:id="@+id/tv_about_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_check_24"
        android:text="매장 관련 빠른 질문 추가"
        android:fontFamily="@font/noto_sans_kr_bold_font_family"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_about_restaurant_explains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱에서 매장에 관련된 질문 목록을 제공해드려요"
        android:fontFamily="@font/noto_sans_kr_medium_font_family"
        android:includeFontPadding="false"
        android:textColor="@color/txt_dark_gray"
        android:textSize="16sp"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:drawablePadding="5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_about_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_check_24"
        android:text="개발 메뉴 관련 빠른 질문 추가"
        android:fontFamily="@font/noto_sans_kr_bold_font_family"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_about_menu_explains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱에서 개발 메뉴에 관련된 질문 목록을 제공해드려요"
        android:fontFamily="@font/noto_sans_kr_medium_font_family"
        android:includeFontPadding="false"
        android:textColor="@color/txt_dark_gray"
        android:textSize="16sp"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:drawablePadding="5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_add_individually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_check_24"
        android:text="사장님께서 직접 질문 추가"
        android:fontFamily="@font/noto_sans_kr_bold_font_family"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_add_individually_explains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그 외 질문을 직접 추가할 수 있어요"
        android:fontFamily="@font/noto_sans_kr_medium_font_family"
        android:includeFontPadding="false"
        android:textColor="@color/txt_dark_gray"
        android:textSize="16sp"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:drawablePadding="5dp"
        android:visibility="gone"
        />

</LinearLayout>